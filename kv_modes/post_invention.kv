#:kivy 1.10.0


# Define id so I can refer to the GridLayout
# class functions
# Display points to the entry widget
# Rows automatically places the BoxLayout's evenly within the 5 rows.
PostInventionGridLayout:
    id: postInvention
    display: inv_name
    # display: inv_desc
    rows: 15
    padding: 20
    spacing: 20

    font_size: 32

    Label:
        font_size: 36
        text: "Post Invention"

    StackLayout:
        spacing: 10

        # Where input is displayed
        TextInput:
            id: inv_name
            font_size: 32
            multiline: False
            size_hint_y: .3
            text: "Invention Name"
        TextInput:
            id: inv_desc
            font_size: 32
            multiline: True
            text: "Invention Description"
        BoxLayout:
            Label:
                text: "Include Default NDA?"
            CheckBox:
                id: nda_checkbox
        Button:
            text: "Post"
            size_hint_x: .25
            size_hint_y: .3
            on_press: postInvention.post(inv_name.text, inv_desc.text, nda_checkbox.state)
            on_release: app.go_back()

    StackLayout:
        id: button_grid
        spacing: 10