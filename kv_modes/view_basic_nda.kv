#:kivy 1.10.0


# Define id so I can refer to the GridLayout
# class functions
# Rows automatically places the BoxLayout's evenly within the 6 rows.
ViewBasicNDAGridLayout:
    id: viewBasicNDA
    rows: 6
    # padding: 50
    # spacing: 40

    StackLayout:
        spacing: 50
        size_hint_y: None
        Label:
            # text_size: root.width, root.height
            # size: self.size
            size: self.texture_size
            font_size: 72
            valign: 'middle'
            halign: 'center'
            text: "Basic NDA"
        Button:
            text: "View Basic NDA"
            size_hint_y: 2.0
            # on_release: viewBasicNDA.open_pdf('Basic-Non-Disclosure-Agreement.pdf')
            on_release: viewBasicNDA.populate("nda/nda.txt")
        Label:
            id: nda_text
            text: ""
            valign: 'bottom'
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]