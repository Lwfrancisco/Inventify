#:kivy 1.10.0


# Define id so I can refer to the GridLayout
# class functions
# Rows automatically places the BoxLayout's evenly within the 6 rows.
NDAListGridLayout:
    id: ndaList
    rows: 6
    # padding: 50
    # spacing: 40

    StackLayout:
        spacing: 50
        size_hint_y: None
        Label:
            # text_size: root.width, root.height
            # size: self.size
            size: self.texture_size
            font_size: 72
            valign: 'middle'
            halign: 'center'
            text: "Available NDAs"
        Button:
            text: "Basic NDA"
            size_hint_y: 2.0
            on_release: app.screen_select('view_basic_nda')
        Button:
            text: "Custom NDA"
            size_hint_y: 2.0