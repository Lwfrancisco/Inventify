#:kivy 1.10.0


# Define id so I can refer to the GridLayout
# class functions
# Display points to the entry widget
ViewInventionGridLayout:
    id: searchInventions
    rows: 15
    padding: 20
    spacing: 20

    font_size: 32

    Label:
        id: title_label
        font_size: 36

    BoxLayout:
        spacing: 10

        # Toggle Button for NDA
        # ToggleButton:
        #     text

        Button:
            text: "View NDA"
            size_hint: .15, 1.0

    StackLayout:
        id: info_stack
        spacing: 10