#:kivy 1.10.0


# Define id so I can refer to the GridLayout
# class functions
# Display points to the entry widget
ViewInventionGridLayout:
    id: viewInvention
    rows: 15
    padding: 20
    spacing: 20

    font_size: 32

    Label:
        font_size: 36
        id: name
        
    StackLayout:
        orientation: 'lr-tb'
        Button:
            id: view_nda_button
            text: "View NDA"
            size_hint: .5, .45
            on_release: app.screen_select('view_basic_nda')
        Button:
            id: nda_button
            text: "Accept NDA"
            size_hint: .5, .45
            on_press: viewInvention.populate()

    StackLayout:
        spacing: 10
        Label:
            id: description
