#:kivy 1.10.0

RootWidget:
    # import container
    container: container
    root_screen: root_screen
    id: root_screen

    StackLayout:
        orientation: 'tb-lr'
        padding: 20
        spacing: 20

        ToggleButton:
            text: "Inventor"
            size_hint: 1.0, .3

            on_release: app.screen_select('inventor')

            group: 'mode'

        ToggleButton:
            text: "Developer"
            size_hint: 1.0, .3

            on_release: app.screen_select('developer')

            group: 'mode'

        # This becomes the entry widget for future kv screens
        BoxLayout:
            size_hint: 1.0, .3

            id: container

            Label:
                text: "Welcome to Inventify!\nPlease select a mode \n to get started.\n(This is a placeholder page)"