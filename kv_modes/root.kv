#:kivy 1.10.0

RootWidget:
    # import container
    container: container
    root_screen: root_screen
    id: root_screen

    StackLayout:
        orientation: 'tb-lr'
        padding: 20
        spacing: 20

        BoxLayout:
            id: container # Makes this specific spot on the page a container for other widgets if need be.
            size_hint: 1.0, .3
            Image:
                source: './images/inventify_logo.png'
                size: self.texture_size
        ToggleButton:
            text: "Inventor"
            size_hint: 1.0, .3

            on_release: app.screen_select('inventor')

            group: 'mode'

        ToggleButton:
            text: "Developer"
            size_hint: 1.0, .3

            on_release: app.screen_select('developer')

            group: 'mode'